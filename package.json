{
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "dev:api": "yarn workspace @zyno-io/pixelci-api dev",
        "dev:cli": "yarn workspace @zyno-io/pixelci-cli dev",
        "dev:ui": "yarn workspace @zyno-io/pixelci-ui dev",
        "services:up": "docker compose -f resources/dev/docker-compose.yml up -d",
        "services:down": "docker compose -f resources/dev/docker-compose.yml down",
        "migrate": "yarn workspace @zyno-io/pixelci-api migrate",
        "test:api": "yarn workspace @zyno-io/pixelci-api test:all",
        "test:api:unit": "yarn workspace @zyno-io/pixelci-api test",
        "test:api:int": "yarn workspace @zyno-io/pixelci-api test:int",
        "test:cli": "yarn workspace @zyno-io/pixelci-cli test",
        "test:ui:types": "yarn workspace @zyno-io/pixelci-ui typecheck",
        "test:e2e": "./scripts/test-e2e.sh",
        "format": "yarn workspace @zyno-io/pixelci-api format && yarn workspace @zyno-io/pixelci-cli format && yarn workspace @zyno-io/pixelci-ui format",
        "docs:dev": "vitepress dev docs",
        "docs:build": "vitepress build docs",
        "docs:preview": "vitepress preview docs"
    },
    "packageManager": "yarn@4.12.0",
    "devDependencies": {
        "lefthook": "^2.1.1",
        "oxlint": "^1.47.0",
        "prettier": "^3.8.1",
        "vitepress": "^1.6.4"
    },
    "version": "0.1.0"
}
