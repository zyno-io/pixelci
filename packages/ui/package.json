{
    "name": "@zyno-io/pixelci-ui",
    "version": "0.1.0",
    "type": "module",
    "private": true,
    "scripts": {
        "dev": "rimraf node_modules/.vite && vite",
        "build": "run-p typecheck build-only",
        "preview": "vite preview",
        "test:unit": "vitest",
        "test:e2e": "playwright test",
        "test:types": "vue-tsc --noEmit -p tsconfig.vitest.json --composite false",
        "build-only": "vite build",
        "typecheck": "vue-tsc --noEmit -p tsconfig.vitest.json --composite false",
        "format": "npx oxlint --fix --fix-suggestions --fix-dangerously && prettier --ignore-path ../../.prettierignore --write ."
    },
    "dependencies": {
        "@fontsource/inter": "^5.2.8",
        "@fortawesome/fontawesome-free": "^7.2.0",
        "@sentry/browser": "^10.38.0",
        "@sentry/vue": "^10.38.0",
        "@zyno-io/openapi-client-codegen": "^2.7.1",
        "@zyno-io/vue-foundation": "^4.33.0",
        "date-fns": "^4.1.0",
        "lodash": "^4.17.23",
        "openapi-typescript-codegen": "^0.30.0",
        "pinia": "^3.0.4",
        "postinstall-postinstall": "^2.1.0",
        "uuid": "^13.0.0",
        "vue": "^3.5.28",
        "vue-router": "^5.0.2"
    },
    "devDependencies": {
        "@playwright/test": "^1.58.2",
        "@tailwindcss/postcss": "^4.1.18",
        "@tsconfig/node22": "^22.0.5",
        "@types/jsdom": "^27.0.0",
        "@types/lodash": "^4.17.23",
        "@types/node": "^25.2.3",
        "@types/uuid": "^11.0.0",
        "@vitejs/plugin-vue": "^6.0.4",
        "@vue/test-utils": "^2.4.6",
        "@vue/tsconfig": "^0.8.1",
        "jsdom": "^28.1.0",
        "npm-run-all": "^4.1.5",
        "postcss": "^8.5.6",
        "rimraf": "^6.1.3",
        "sass": "^1.97.3",
        "tailwindcss": "~4",
        "type-fest": "^5.4.4",
        "typescript": "~5.9.3",
        "vite": "^7.3.1",
        "vite-plugin-oxlint": "^1.6.0",
        "vitest": "^4.0.18",
        "vue-tsc": "^3.2.4"
    }
}
